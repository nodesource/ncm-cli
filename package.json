{
  "name": "ncm-cli",
  "version": "0.0.0-beta.4",
  "description": "A command-line tool that works with the new NCM api to report quality scores for node_modules, fetch and display the policy set for an organization, and check for package compliance",
  "license": "Apache-2.0",
  "author": "NodeSource <npm@nodesource.com> (https://nodesource.com)",
  "contributors": [
    "Michael Sterpka <michael.sterpka@nodesource.com> (https://github.com/mster)"
  ],
  "scripts": {
    "check-deps": "tools/check-deps.sh",
    "start": "bin/ncm-cli.js",
    "lint": "standard --verbose",
    "pretest": "npm run -s lint",
    "test": "NCM_API=staging.api.nodesource.com NCM_TOKEN=cd6f6825-6b8e-4b1e-827c-6e6f57669d82 tap -J test/*.js",
    "update-test-snapshots": "NCM_API=staging.api.nodesource.com NCM_TOKEN=cd6f6825-6b8e-4b1e-827c-6e6f57669d82 TAP_SNAPSHOT=1 tap -J test/*.js"
  },
  "bin": {
    "ncm": "bin/ncm-cli.js",
    "ncm-cli": "bin/ncm-cli.js"
  },
  "keywords": [],
  "dependencies": {
    "chalk": "^2.4.1",
    "client-request": "^2.3.0",
    "configstore": "^4.0.0",
    "graphql-request": "^1.8.2",
    "minimist": "^1.2.0",
    "p-defer": "^1.0.0",
    "semver": "^5.6.0",
    "universal-module-tree": "^3.0.1"
  },
  "devDependencies": {
    "dependency-check": "^3.2.1",
    "standard": "^12.0.1",
    "tap": "^12.5.3"
  }
}
